#!/bin/sh
echo "Inside initramfs init..."
bin/mount -t proc none /proc
bin/mount -t sysfs none /sys
bin/mount -t devtmpfs none /dev
echo "Executing veritysetup..."
bin/veritysetup --verbose --data-block-size=1024 --hash-block-size=1024 create root /dev/vda4 /dev/vda5 3e1feea33c2b02392903aeed63ff7880a39ebb5c8ea7bf6700242659691247de
bin/sleep 10
bin/mount /dev/vda3 /mnt/root
bin/mount /dev/mapper/root /mnt/root/mnt/datadev
bin/mount --move /proc /mnt/root/proc
bin/mount --move /sys /mnt/root/sys
bin/mount --move /dev /mnt/root/dev
echo "Executing switch_root..."
exec bin/switch_root /mnt/root /usr/lib/systemd/systemd-bootchart